<!DOCTYPE html>
<html lang="en">

{{>header}}

<body class="antialiased bg-body text-body font-body">
<div>

    {{>navbar}}

    <section class="relative py-20 lg:pt-32 bg-blue-800 overflow-x-hidden">
        <!-- BACKGROUND SWIRLS -->
        <img class="hidden md:block absolute top-0 left-0" src="assets/elements/white-line.svg" alt="">
        <img class="absolute top-50 left-0 mt-64" src="assets/elements/orange-line.svg" alt="">
        <img class="absolute bottom-0 -right-10 w-72" src="assets/elements/violet-line.svg" alt="">

        <div class="relative container mx-auto px-4">
            <div class="p-8 lg:p-20 nav-bg">
                <h2 class="mb-8 text-4xl font-bold font-heading">Shopping Cart</h2>
                <p class="mb-10 md:mb-16 text-gray-500"></p>

                <div class="mb-12 pb-12 border-b">
                    {{#products}}
                        <div class="flex mb-8 flex-wrap items-center justify-between">
                            <!-- PRODUCT -->
                            <div class="w-full lg:w-auto mb-8 xl:mb-0 flex flex-wrap items-center">
                                <!-- PRODUCT IMAGE -->
                                <div class="flex items-center justify-center h-32 mb-4 lg:mb-0 bg-gray-100">
                                    <img class="h-full object-contain" src="assets/images/waterbottle.png" alt="">
                                </div>
                                <!-- PRODUCT TEXT -->
                                <div class="w-full md:w-auto md:pl-4 md:pl-8">
                                    <h3 class="mb-2 text-xl font-bold font-heading">{{dataValues.name}}</h3>
                                    <p class="mb-1 text-blue-300"><a href="#">link to shop that sells it</a></p>
                                    <p class="text-gray-500">In Stock</p>
                                    <span class="text-lg font-bold font-heading text-blue-300">${{dataValues.price}}</span>
                                </div>
                            </div>
                            <div class="w-full lg:w-auto flex flex-wrap -mx-4 items-center">
                                <!-- QUANTITY ADJUSTER -->
                                <!-- REMOVE BUTTON -->
                                <div class="order-2 md:order-1 w-full md:w-1/3 px-4">
                                    <form method="post" action="/cart/removeFromCart">
                                        <button
                                                class="inline-block mr-16 px-8 py-4 text-white font-bold font-heading uppercase bg-red-300 hover:bg-red-400 rounded-md">
                                            Remove
                                        </button>
                                        <input type="hidden" value="{{id}}" name="productId"/>
                                    </form>
                                </div>
                            </div>
                        </div>
                    {{/products}}
                </div>

                <!-- SUMMARY -->
                <div class="mb-10">
                    <div class="py-3 px-10 bg-gray-800 rounded-full">
                        <div class="flex justify-between">
                            <span class="font-medium">SubTotal</span>
                            <span class="font-bold font-heading">${{subTotal}}</span>
                        </div>
                    </div>
                    <div class="py-3 px-10 rounded-full">
                        <div class="flex justify-between">
                            <span class="font-medium">Shipping</span>
                            <span class="font-bold font-heading">${{shipping}}</span>
                        </div>
                    </div>
                    <div class="py-3 px-10 bg-gray-800 rounded-full">
                        <div class="flex justify-between">
                            <span class="font-medium">Tax</span>
                            <span class="font-bold font-heading">${{tax}}</span>
                        </div>
                    </div>
                    <div class="py-3 px-10 rounded-full">
                        <div class="flex justify-between">
                            <span class="text-base md:text-xl font-bold font-heading">Order Total</span>
                            <span class="font-bold font-heading">${{total}}</span>
                        </div>
                    </div>
                </div>
                <div class="text-right"><a
                        class="inline-block mb-4 md:mb-0 mr-6 w-full md:w-auto px-8 py-4 bg-blue-400 hover:bg-blue-100 text-center font-bold font-heading uppercase rounded-md transition duration-200"
                        href="/index">Continue Shopping</a>
                    {{#canCheckout}}
                        <a class="inline-block w-full md:w-auto px-8 py-4 bg-orange-300 hover:bg-orange-400 text-center text-white font-bold font-heading uppercase rounded-md transition duration-200"
                           href="/checkout">Go to Checkout</a>
                    {{/canCheckout}}
                </div>
            </div>
        </div>
    </section>
</div>

{{>footer}}
</body>
</html>