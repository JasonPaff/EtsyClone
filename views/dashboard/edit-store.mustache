<!DOCTYPE html>
<html lang="en">
<html>

{{>header}}

<body class="main-bg bg-body text-body font-body">
    {{>navbar}}
    <section class="relative py-20 lg:pt-32 bg-blue-800 overflow-y-hidden">
        <!-- BACKGROUND SWIRLS -->
        <img class="hidden md:block absolute top-0 left-0" src="assets/elements/white-line.svg" alt="">
        <img class="absolute top-50 left-0 mt-64" src="assets/elements/orange-line.svg" alt="">
        <img class="absolute bottom-0 right-0 w-72" src="assets/elements/violet-line.svg" alt="">
        <div class="relative container mx-auto px-4">
            <h2 class="mb-16 md:mb-24 text-4xl md:text-5xl font-bold login-error font-heading" style="color: white">
                Edit Store</h2>
            <div class="flex flex-wrap -mx-3 mb-24 relative nav-bg p-6 mt-8">
                {{#storeData}}
                <form method="POST" action="/dashboard/edit-store/{{id}}" enctype="multipart/form-data">
                    <input type="text"
                        class="w-full mb-4 px-12 py-6 border border-gray-200 focus:ring-blue-300 cart nav-bg nav-border-bg focus:border-blue-300 rounded-md"
                        value="{{store_name}}" name="storeName" required />
                    <div>
                        <textarea name="storeDescription"
                            class="w-full mb-4 px-12 py-6 border border-gray-200 focus:ring-blue-300 cart nav-bg nav-border-bg focus:border-blue-300 rounded-md"
                            rows="6" cols="50" required>{{store_description}}</textarea>
                    </div>
                    <h2 class="mb-4 text-base font-bold login-error font-heading" style="color: white">
                        Update Store Image:</h2>
                    <input type="file" name="storeImage" accept="image/*" />
                    <div>
                        <button
                            class="mt-12 md:mt-16 bg-orange-300 hover:bg-orange-400 text-white font-bold font-heading py-5 px-8 rounded-md uppercase">Submit</button>
                    </div>

                </form>
                {{/storeData}}
            </div>
        </div>
    </section>


    {{>footer}}
</body>

</html>
